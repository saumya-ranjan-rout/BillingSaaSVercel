{
  "name": "billing-saas",
  "version": "1.0.0",
  "description": "Multi-tenant Billing SaaS application with GST support",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/mobile",
    "packages/shared"
  ],
  "scripts": {
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:mobile": "cd packages/mobile && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd packages/backend && npm run test",
    "test:frontend": "cd packages/frontend && npm run test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "lerna": "^6.0.0",
    "typescript": "^4.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "critters": "^0.0.23"
  }
}
